# Supabase (required for auth and database)
# Get these from your Supabase project: Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase service role key (server-only; never expose to client)
# Used for admin operations and RLS bypass when needed
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# PartyKit (real-time collaboration)
# URL of your PartyKit server (e.g. https://your-app.partykit.dev)
NEXT_PUBLIC_PARTYKIT_URL=https://your-partykit-url.partykit.dev
# Secret for server-to-PartyKit auth (optional)
PARTYKIT_SECRET=your-partykit-secret

# GitHub (OAuth and webhooks)
# Create OAuth App: GitHub > Settings > Developer settings > OAuth Apps
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
# Webhook secret for verifying GitHub webhook signatures (X-Hub-Signature-256)
WEBHOOK_SECRET=your-webhook-secret

# Encryption key for GitHub token (min 32 chars; used by server only)
ENCRYPTION_KEY=your-32-char-or-longer-encryption-key

# PartyKit server: base URL of this Next.js app (for load/save from PartyKit)
PARTYKIT_APP_URL=http://localhost:3000
